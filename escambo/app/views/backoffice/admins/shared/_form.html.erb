<h1 class="page-header">Categorias</h1>
<% if @admin.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <ul>
      <% @admin.errors.full_messages.each do |messages| %>
        <li><%= messages %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="panel panel-default">
  <div class="panel-heading">
      <%= action %>
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="col-lg-6">
    <%= form_for([:backoffice, @admin]) do |f| %>
      <div class="form-group">
        <label>E-mail</label>
        <%= f.text_field :email, :class => "form-control", :placeholder => "Ex: user@gmail.com" %>
        <br>
        <label>Senha</label>
        <%= f.password_field :password, :class => "form-control", :placeholder => "*******" %>
        <br>
        <label>Confirmação da senha</label>
        <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "*******" %>
        <br>
        <button type="submit" class="btn btn-default">Salvar</button>
      </div>
    <% end %>
    </div>
  </div>
  <!-- /.panel-body -->
</div>
