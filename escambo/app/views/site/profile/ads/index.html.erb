<h1 style="text-align:center">Meus Anúncios</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Imagem</th>
      <th scope="col">Descrição</th>
      <th scope="col">Preço</th>
    </tr>
  </thead>
  <tbody>
    <% @ads.each do |ad| %>
    <tr>
      <th scope="row"><%= ad.id %></th>
      <td><%= image_tag ad.picture(:thumb) %></td>
      <td><%= ad.description %></td>
      <td><%= humanized_money_with_symbol ad.price %></td>
    </tr>
    <% end %>
  </tbody>
</table>
